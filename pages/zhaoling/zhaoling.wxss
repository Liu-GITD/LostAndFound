page{
    background-color: aliceblue;
}

.listContainer{
    width: 100%;
    padding: 0 30rpx;
    background-color: aliceblue;
  }
  
  .itemContainer{
    width: 740rpx;
    margin: 0 auto;
    flex-wrap: wrap;
    display: flex;
  }
  .listItem:nth-child(odd){
    display: flex;
    width: 340rpx;
    height: 200rpx;
    justify-content: space-between;
    /* background-image: linear-gradient(rgba(0, 255, 255, 0.308),rgba(0, 255, 255, 0),rgba(0, 255, 255, 0.308)); */
    background-image: linear-gradient(rgba(251, 255, 0, 0.308),rgba(251, 255, 0, 0),rgba(251, 255, 0, 0.308));
    margin-right: 8rpx;
    margin-top: 10rpx;
    margin-bottom: 8rpx;
    border-radius: 30rpx;
  }
  
  
  .itemImg{
    margin: 10rpx;
    width: 140rpx;
    height: 160rpx;
  }
  
  .itemInfo{
    color: rgb(255, 116, 2);
    align-self: center;
    font-size: 30rpx;
  }
  
  
  .tips{
    text-align: center;
    color: #87989cd8;
    font-size: 25rpx;
  }